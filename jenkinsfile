pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/hfirdhows/My_Jenkins25.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                echo 'Building images'
                // bat 'mvn clean install'   // for Windows + Maven project
            }
        }

        stage('Test') {
            steps {
                echo 'Test pass'
                // bat 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Application deployed'
                // bat 'copy target\\myapp.war C:\\deployments\\'
            }
        }
    }
}
